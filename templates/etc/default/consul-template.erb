# The location of the Consul instance to query (may be an IP address or FQDN)
# with port.
CONSUL="<%= @consul_host %>:<%= @consul_port %>"

# The Consul API token. There is no default value.
CONSUL_TOKEN="<%= @token %>"

# The amount of time to wait if Consul returns an error when communicating with
# the API. The default value is 5 seconds.
RETRY="<%= @retry %>"

# The minimum(:maximum) to wait before rendering a new template to disk and
# triggering a command, separated by a colon (:). If the optional maximum value
# is omitted, it is assumed to be 4x the required minimum value. There is no
# default value.
WAIT="<%= @wait %>"

# The maximum staleness of a query. If specified, Consul will distribute work
# among all servers instead of just the leader. The default value is 1 second.
MAX_STALE="<%= @max_stale %>"

# The log level for output. This applies to the stdout/stderr logging as well as
# syslog logging (if enabled). Valid values are "debug", "info", "warn", and
# "err". The default value is "warn".
LOG_LEVEL="<%= @log_level %>"
