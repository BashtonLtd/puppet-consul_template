# The location of the Consul instance to query (may be an IP address or FQDN)
# with port.
CONSUL="<%= @consul_host %>:<%= @consul_port %>"

OPTIONS=""

<%- if @token -%>
OPTIONS="${OPTIONS} -token <%= @token %>"
<%- end -%>

<%- if @retry -%>
OPTIONS="${OPTIONS} -retry <%= @retry %>"
<%- end -%>

<%- if @wait -%>
OPTIONS="${OPTIONS} -wait <%= @wait %>"
<%- end -%>

<%- if @max_stale -%>
OPTIONS="${OPTIONS} -max-stale <%= @max_stale %>"
<%- end -%>

<%- if @log_level -%>
OPTIONS="${OPTIONS} -log-level <%= @log_level %>"
<%- end -%>
